{
    "swagger": "2.0",
    "info": {
        "description": "A minesweeper game API",
        "title": "Minesweeper API",
        "contact": {
            "name": "Christian Melgarejo",
            "email": "cmelgarejo.dev@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.8"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/game": {
            "post": {
                "description": "Creates a game of minesweeper and returns a gameID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "game"
                ],
                "summary": "Creates a game of minesweeper",
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/engine.Game"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    }
                }
            }
        },
        "/api/game/{id}": {
            "get": {
                "description": "Gets the information of a minesweeper game, fields and users",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "game"
                ],
                "summary": "Gets the information of a minesweeper game",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Game ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/engine.Game"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    }
                }
            },
            "put": {
                "description": "Updates a game of minesweeper and returns a gameID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "game"
                ],
                "summary": "Updates a game of minesweeper",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Game ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/engine.Game"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/responses.ResponseError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "engine.Field": {
            "type": "object",
            "properties": {
                "adjMines": {
                    "description": "count of adjacent mines",
                    "type": "integer"
                },
                "clicked": {
                    "description": "indicated whether the field was clicked",
                    "type": "boolean"
                },
                "flagged": {
                    "description": "red flag in the field",
                    "type": "boolean"
                },
                "position": {
                    "description": "position in the minefield",
                    "type": "object",
                    "$ref": "#/definitions/engine.Position"
                }
            }
        },
        "engine.Game": {
            "type": "object",
            "properties": {
                "cols": {
                    "type": "integer"
                },
                "createdAt": {
                    "type": "string"
                },
                "finishedAt": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "mineField": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/engine.Field"
                        }
                    }
                },
                "mines": {
                    "type": "integer"
                },
                "rows": {
                    "type": "integer"
                },
                "startedAt": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                }
            }
        },
        "engine.Position": {
            "type": "object",
            "properties": {
                "col": {
                    "description": "col of the field position",
                    "type": "integer"
                },
                "row": {
                    "description": "row of the field position",
                    "type": "integer"
                }
            }
        },
        "responses.ResponseError": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "details": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}